@page
@model CRUD.Pages.EditModel
@{
}


<div class="container">
    <h1>Update Registration</h1>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <input type="hidden" asp-for="Person.PersonId" />

        <div class="form-group">
            <label>Firstname</label>
            <input class="form-control" asp-for="Person.Firstname" />

        </div>
        <div class="form-group">
            <label>Lastname</label>
            <input class="form-control" asp-for="Person.Lastname" />

        </div>
        <div class="form-group">
            <label>MI</label>
            <input class="form-control" asp-for="Person.MI" />

        </div>
        <div class="form-group">
            <label>EmailAddress</label>
            <input class="form-control" asp-for="Person.EmailAddress" />

        </div>
        <div class="form-group">
            <label>Address</label>
            <input class="form-control" asp-for="Person.Address" />

        </div>
        <div class="form-group">
            <label>Age</label>
            <input class="form-control" asp-for="Person.Age" />

        </div>
        <div class="form-group">
            <label>Contact</label>
            <input class="form-control" asp-for="Person.Contact" />

        </div>
        <button class="btn btn-primary btn-block" type="submit">Update</button>
    </form>
</div>