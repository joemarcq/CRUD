@page
@model CRUD.Pages.RegisterModel
@{
}


<div class="container">
        <h1>Register</h1>
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label>Firstname</label>
                <input class="form-control" asp-for="Person.Firstname" />
             
            </div>
            <div class="form-group">
                <label>Lastname</label>
                <input class="form-control" asp-for="Person.Lastname" />
               
            </div>
            <div class="form-group">
                <label>MI</label>
                <input class="form-control" asp-for="Person.MI" />
           
            </div>
            <div class="form-group">
                <label>EmailAddress</label>
                <input class="form-control" asp-for="Person.EmailAddress" />
             
            </div>
            <div class="form-group">
                <label>Address</label>
                <input class="form-control" asp-for="Person.Address" />
               
            </div>
            <div class="form-group">
                <label>Age</label>
                <input class="form-control" asp-for="Person.Age" />
               
            </div>
            <div class="form-group">
                <label>Contact</label>
                <input class="form-control" asp-for="Person.Contact" />
             
            </div>
            <button class="btn btn-primary btn-block" type="submit">Save</button>
        </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Person ID</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>MI</th>
            <th>EmailAddress</th>
            <th>Address</th>
            <th>Age</th>
            <th>Contact</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var Person in Model.Persons)
        {
            <tr>
                <td>@Person.PersonId</td>
                <td>@Person.Firstname</td>
                <td>@Person.Lastname</td>
                <td>@Person.MI</td>
                <td>@Person.EmailAddress</td>
                <td>@Person.Address</td>
                <td>@Person.Age</td>
                <td>@Person.Contact</td>
                <td><a asp-page="Edit" asp-route-id="@Person.PersonId">Edit</a> | <a asp-page="Person" asp-page-handler="Delete" asp-route-id="@Person.PersonId">Delete</a></td>
            </tr>

        }
    </tbody>
</table>